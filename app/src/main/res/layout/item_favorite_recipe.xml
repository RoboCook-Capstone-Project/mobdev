<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivRecipePicture"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:src="@drawable/image_food"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tvRecipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="12dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:text="Recipe Title"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/orange"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvRecipeAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="3dp"
                    android:paddingBottom="12dp"
                    android:textStyle="italic"
                    android:text="Recipe Author"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:ellipsize="end"/>

                <ImageView
                    android:id="@+id/btShowDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:text="Ingredients"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/tvRecipeIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:textStyle="bold|italic"
                android:text="Steps"
                android:textColor="@color/orange"/>

            <TextView
                android:id="@+id/tvRecipeSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="15dp"
                android:textSize="14sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>