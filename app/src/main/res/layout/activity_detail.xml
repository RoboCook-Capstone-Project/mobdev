<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".razif.ui.detail.DetailActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/ivDetailRecipeImage"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:alpha="0"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvDetailRecipeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/recipe_title"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/orange"
                android:alpha="0"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivDetailRecipeImage"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvDetailRecipeAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Author of Recipe"
                android:textStyle="italic"
                android:textSize="15sp"
                android:alpha="0"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailRecipeTitle"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Favorite"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:alpha="0"/>

            <TextView
                android:id="@+id/tvIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Ingredients"
                android:gravity="left"
                android:layout_gravity="left"
                android:textColor="@color/orange"
                android:textStyle="bold|italic"
                android:alpha="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailRecipeAuthor"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvDetailRecipeIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:gravity="left"
                android:text="@string/recipe_ingredients"
                android:alpha="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailRecipeAuthor"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="Steps"
                android:layout_gravity="left"
                android:textColor="@color/orange"
                android:textStyle="bold|italic"
                android:gravity="left"
                android:alpha="0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailRecipeAuthor"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvDetailRecipeSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@string/recipe_ingredients"
                android:alpha="0"
                android:textSize="14sp"
                android:gravity="left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDetailRecipeIngredients"
                tools:ignore="MissingConstraints"
                android:paddingBottom="16dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>